@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<div class="container text-center w-100">
    <div class="row justify-content-center">
    <div id="carouselExample" class="carousel slide w-75">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/images/choco.jpg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="~/images/cupcakes.jpg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="~/images/sprinkle.jpeg" class="d-block w-100" alt="...">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>
</div>
<div class="text-center">
    <h1 class="display-4">Welcome to Cake Shop!</h1>
    <p>Come have a look at our amazing treats. Our cakes are baked to order for any special occasion!</p>
</div>
