@page
@model WorksModel
@{
    ViewData["Title"] = "Works";
    
}

<h1>Check out our previous works!</h1>
<div class="container text-center">
    <div class="row row-cols-3">
        @for (var i = 0; i < Model.Item.Count; i++) {
        <div class="col-12 col-md-4">
                <a asp-page="/Content" asp-route-id="@i" style="text-decoration:none">
                    <div class="rounded-3 m-2" style="background-color:tan">
                        <img src="~/images/@Html.DisplayFor(model => model.Item[i].ImageDirectory)" class="w-75 mt-2 rounded-3" />
                    <p class="text-black mb-1">@Html.DisplayFor(model => model.Item[i].Title)</p>
                </div>
            </a>
        </div>
        }
    </div>
</div>